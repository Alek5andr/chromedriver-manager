{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2019",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "module": "commonjs",
    "lib": ["es6", "es2015", "dom"],
    "declaration": true,
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "./node_modules"
  ]
}
